<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChoiceFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_main_page_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/averia_serif_libre_italic_4"
                android:textColor="#FFFFFF">
            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/text_app_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:textColor="#41FFFFFF">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/title"
                android:contentDescription="@string/app_name">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#8D322525">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_marginStart="2dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageButton
                                android:id="@+id/button_multiplayer"
                                android:layout_width="200dp"
                                android:layout_height="60dp"
                                android:layout_gravity="start"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_1"
                                android:contentDescription="Multiplayer"
                                tools:ignore="HardcodedText">
                            </ImageButton>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <ImageButton
                                android:id="@+id/button_singleplayer"
                                android:layout_width="200dp"
                                android:layout_height="60dp"
                                android:layout_gravity="start"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_2"
                                android:contentDescription="single player"
                                tools:ignore="HardcodedText">
                            </ImageButton>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dp">
                            <ImageButton
                                android:id="@+id/button_record"
                                android:layout_width="143dp"
                                android:layout_height="54dp"
                                android:layout_gravity="start"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_4"
                                android:contentDescription="setting"
                                tools:ignore="HardcodedText">
                            </ImageButton>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageButton
                                android:id="@+id/button_setting"
                                android:layout_width="130dp"
                                android:layout_height="60dp"
                                android:layout_gravity="start"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_3"
                                android:contentDescription="setting"
                                tools:ignore="HardcodedText">
                            </ImageButton>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_show_hero"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/app_name"
                            tools:ignore="HardcodedText,NestedWeights">
                        </ImageView>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <ImageButton
                                android:id="@+id/button_change_hero"
                                android:layout_width="130dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_5"
                                android:contentDescription="Change hero"
                                tools:ignore="HardcodedText">
                            </ImageButton>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="By Renns , aucki6144"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </FrameLayout>


</FrameLayout>