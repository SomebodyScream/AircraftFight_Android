<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_back_connect"
            android:layout_width="130dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:layout_marginVertical="5dp"
            tools:ignore="HardcodedText"
            android:contentDescription="back button">
        </ImageButton>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--   DEBUG CODE (delete later)     -->
            <EditText
                android:id="@+id/editText_test_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <!--   DEBUG CODE (delete later)     -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/title_match"
                android:scaleType="fitStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginHorizontal="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:text="三倍⭐Ice Cream !!!">

                    </TextView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_waiting"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter">
                        </ImageView>

                        <ImageButton
                            android:id="@+id/button_start_connect"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="20dp"
                            android:scaleType="fitCenter"
                            android:background="@drawable/button_start_multiple">
                        </ImageButton>
                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/title_choose_girl"
                android:scaleType="fitStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                tools:ignore="HardcodedText"
                android:contentDescription="setting title">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_choose_hero_cg_connect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_choose_hero_connect"
                            android:layout_width="150dp"
                            android:layout_height="200dp">
                        </ImageView>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageButton
                                android:id="@+id/button_change_hero_connect"
                                android:layout_width="130dp"
                                android:layout_height="60dp"
                                android:layout_gravity="end"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_5">
                            </ImageButton>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/title_choose_talis"
                android:scaleType="fitStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="20dp"
                tools:ignore="HardcodedText"
                android:contentDescription="setting title">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_hero_info_connect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_choose_talis_connect"
                            android:layout_width="150dp"
                            android:layout_height="200dp">
                        </ImageView>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageButton
                                android:id="@+id/button_change_talis_connect"
                                android:layout_width="130dp"
                                android:layout_height="60dp"
                                android:layout_gravity="end"
                                android:scaleType="fitCenter"
                                android:background="@drawable/single_button_5">
                            </ImageButton>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>