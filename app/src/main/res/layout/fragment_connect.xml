<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_back_connect"
            android:layout_width="130dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:layout_marginVertical="5dp"
            tools:ignore="HardcodedText"
            android:contentDescription="back button">
        </ImageButton>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/title_match"
                android:scaleType="fitStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                tools:ignore="HardcodedText"
                android:contentDescription="setting title">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/somebody_icecream"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="三倍 ⭐ Ice Cream !!! リンク~スタート~"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:freezesText="true"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_waiting"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:scaleType="centerCrop">
                        </ImageView>

                        <ImageButton
                            android:id="@+id/button_start_connect"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="15dp"
                            android:scaleType="fitCenter"
                            android:background="@drawable/button_start_multiple">
                        </ImageButton>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/title_choose_girl"
                android:scaleType="fitStart"
                android:layout_marginTop="18dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                tools:ignore="HardcodedText"
                android:contentDescription="setting title">
            </ImageView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardCornerRadius="5dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/image_choose_hero_cg_connect"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop">
                            </ImageView>

                            <ImageView
                                android:id="@+id/image_choose_hero_connect"
                                android:layout_width="120dp"
                                android:layout_height="200dp"
                                android:layout_gravity="end|bottom">
                            </ImageView>

                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_hero_info_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="TEST">
                    </TextView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:id="@+id/button_change_hero_connect"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center|bottom"
                            android:scaleType="fitCenter"
                            android:background="@drawable/single_button_5">
                        </ImageButton>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:text="Icon by icon8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="By Renns , aucki6144 . All rights reserved"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>