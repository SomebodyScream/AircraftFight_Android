<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RecordActivity">


    <VideoView
        android:id="@+id/change_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_back_change"
            android:layout_width="130dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:layout_marginVertical="5dp"
            tools:ignore="HardcodedText"
            android:contentDescription="back button">
        </ImageButton>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="55dp"
                    android:src="@drawable/title_choose_hero"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText"
                    android:contentDescription="setting title">
                </ImageView>
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#00FFFFFF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cg_reimu">
                        </ImageView>

                    </com.google.android.material.card.MaterialCardView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/text_reimu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:text="REIMU"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="40sp"
                            android:singleLine="true"
                            android:layout_gravity="center_horizontal|top">
                        </TextView>
                        <Button
                            android:id="@+id/choose_reimu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="CHOOSE"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            style="?android:attr/buttonBarButtonStyle">
                        </Button>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#00FFFFFF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cg_marisa">
                        </ImageView>

                    </com.google.android.material.card.MaterialCardView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/text_marisa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MARISA"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="40sp"
                            android:singleLine="true"
                            android:layout_gravity="center_horizontal|top">
                        </TextView>
                        <Button
                            android:id="@+id/choose_marisa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="CHOOSE"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            style="?android:attr/buttonBarButtonStyle">
                        </Button>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#8D322525"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#00FFFFFF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cg_youmu">
                        </ImageView>

                    </com.google.android.material.card.MaterialCardView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/text_youmu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YOUMU"
                            android:textColor="@color/white"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:textStyle="bold"
                            android:textSize="40sp"
                            android:singleLine="true"
                            android:layout_gravity="center_horizontal|top">
                        </TextView>
                        <Button
                            android:id="@+id/choose_youmu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="CHOOSE"
                            android:fontFamily="@font/averia_serif_libre_italic_4"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            style="?android:attr/buttonBarButtonStyle">
                        </Button>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:text="Icon by icon8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="By Renns , aucki6144 . All rights reserved"
                tools:ignore="HardcodedText" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>